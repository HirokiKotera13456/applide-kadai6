<h1>User info</h1>
<%= attachment_image_tag(@book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
<h3><%= @book.user.name %></h3>
<h3><%= @book.user.introduction %></h3>
<% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

  
<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<div class="books">
  <h4>Books</h4>
  <% @books.each do |book| %>
    <table>
      <tr>
        <th><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
    </table>
  <% end %>
</div>

