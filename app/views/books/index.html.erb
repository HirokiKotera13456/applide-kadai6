<%= render 'users/info', user: @user %>
<%= render "books/form", book: @book %>

<div class="books">
  <h4>Books</h4>
  <% @books.each do |book| %>
  <%= attachment_image_tag book.user, :profile_image, :fill,40,40, fallback:"no_image.jpg",size:'40x40' %>
    <table>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
    </table>
  <% end %>
</div>




