<h1>User info</h1>
<%= attachment_image_tag(@book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
<h3><%= @book.user.name %></h3>
<h3><%= @book.user.introduction %></h3>


<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
   <% end %>
  <% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<div class="books">
  <h4>Books</h4>
  <% @books.each do |book| %>
  <%= attachment_image_tag book.user, :profile_image, :fill,40,40, fallback:"no_image.jpg",size:'40x40' %>
    <table>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
    </table>
  <% end %>
</div>




