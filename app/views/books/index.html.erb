<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<div class="books">
  <h4>Books</h4>
  <% @books.each do |book| %>
    <table>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
        
        <td><%= link_to book.title, book_path(book) %></td>
      
        <td><%= book.body %></td>
    </table>
  <% end %>
</div>




